{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "noEmit": false 
  },
  "include": ["src"]
}
